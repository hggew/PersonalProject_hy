<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".ChooseFuncFragment">

    <Button
        android:id="@+id/btn_calculation"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:text="Calculator"
        app:layout_constraintBottom_toTopOf="@+id/btn_exchangerate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_exchangerate"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Exchange Rate"
        app:layout_constraintTop_toBottomOf="@+id/btn_calculation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="89dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ChooseFuncFragment">

    <data>
        <variable
            name="chooseFuncFragment"
            type="com.example.exchangerate.ChooseFuncFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnCalculator"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:onClick="@{() -> chooseFuncFragment.goCalcFragment()}"
            android:text="@string/calculator"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnExchangeRate"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:onClick="@{() -> chooseFuncFragment.goExchRateFragment()}"
            android:text="@string/exchange_rate"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>

</layout>